@model EXPRACU2_AGUIRRE_BASURTO.ViewModels.CompensacionViewModel
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.Title = "Compensación";
}
<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            Agregar Compensación
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            @using (Html.BeginForm("Agregar", "Compensaciones", FormMethod.Post, new { @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Compensacion.Id)
                <div class="m-portlet__body">
                    <div class="form-group m-form__group row">
                        <div class="col-lg-6">
                            @Html.LabelFor(m => m.Compensacion.PersonaId, "Persona"):
                            @Html.DropDownListFor(m => m.Compensacion.PersonaId, new SelectList(Model.Personas,"Id","Nombres"),"Seleccione una persona", new { @class = "form-control m-input", required="required" })
                            @Html.ValidationMessageFor(m => m.Compensacion.PersonaId)
                        </div>
                        <div class="col-lg-6">
                            @*@Html.LabelFor(m => m.Compensacion.PersonaId, "Persona"):
                            @Html.TextBoxFor(m => m.Compensacion.Persona.HorasExtraAcumuladas, new
                            {
                                @class = "form-control m-input",
                                @disabled = "disabled"
                            })
                            @Html.ValidationMessageFor(m => m.Compensacion.PersonaId)*@
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-6">
                            @Html.LabelFor(m => m.Compensacion.Fecha):
                            @Html.TextBoxFor(m => m.Compensacion.Fecha, "{0:dd/MM/yyyy}", new
                            {
                                @class = "form-control m-input",
                                @id = "m_datepicker_2",
                                @placeholder = "Ingrese fecha de nacimiento",
                                @required="required"
                            })
                            @Html.ValidationMessageFor(m => m.Compensacion.Fecha)
                        </div>
                        <div class="col-lg-6">
                            @Html.LabelFor(m => m.Compensacion.HorasCompensadas, "Horas Compensadas"):
                            @Html.TextBoxFor(m => m.Compensacion.HorasCompensadas, new
                            {
                                @class = "form-control",
                                @id = "m_timepicker_2_modal",
                                @placeholder = "Select time",
                                @required="required"
                            })
                            @Html.ValidationMessageFor(m => m.Compensacion.HorasCompensadas)
                        </div>
                    </div>
                </div>

                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <div class="row">
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>
                                <a href="/Mantenimiento/Persona/Listar" class="btn btn-secondary">
                                    Cancel
                                </a>
                            </div>
                            <div class="col-lg-6 m--align-right">
                                <button type="reset" class="btn btn-danger">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>
